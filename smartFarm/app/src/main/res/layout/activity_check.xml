<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="400dp"
        android:layout_height="700dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/Waterprogress_bar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:indeterminateOnly="false"
        android:progress="20"
        android:layout_marginStart="20dp"
        android:progressDrawable="@drawable/custom_progress"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/Waterprogress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="20"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Waterprogress_bar"
        app:layout_constraintEnd_toEndOf="@+id/Waterprogress_bar"
        app:layout_constraintStart_toStartOf="@+id/Waterprogress_bar"
        app:layout_constraintTop_toTopOf="@+id/Waterprogress_bar" />

    <TextView
        android:id="@+id/niveaudeau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water level"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/Waterprogress_bar"
        app:layout_constraintStart_toStartOf="@+id/Waterprogress_bar"
        app:layout_constraintTop_toBottomOf="@+id/Waterprogress_bar" />

    <ProgressBar
        android:id="@+id/Humprogresss_bar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:indeterminateOnly="false"
        android:progress="20"
        android:progressDrawable="@drawable/custom_progress"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/Waterprogress_bar"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintStart_toEndOf="@+id/Waterprogress_bar"
        app:layout_constraintTop_toTopOf="@+id/Waterprogress_bar" />

    <TextView
        android:id="@+id/Humprogresss_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="20"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Humprogresss_bar"
        app:layout_constraintEnd_toEndOf="@+id/Humprogresss_bar"
        app:layout_constraintStart_toStartOf="@+id/Humprogresss_bar"
        app:layout_constraintTop_toTopOf="@+id/Humprogresss_bar" />

    <TextView
        android:id="@+id/Humidite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HumiditÃ©"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/niveaudeau"
        app:layout_constraintEnd_toEndOf="@+id/Humprogresss_bar"
        app:layout_constraintStart_toStartOf="@+id/Humprogresss_bar"
        app:layout_constraintTop_toTopOf="@+id/niveaudeau" />

    <ProgressBar
        android:id="@+id/sol1progressss_bar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:indeterminateOnly="false"
        android:progress="20"
        android:progressDrawable="@drawable/custom_progress_red"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/Humprogresss_bar"
        app:layout_constraintStart_toStartOf="@+id/Humprogresss_bar"
        app:layout_constraintTop_toBottomOf="@+id/Humidite" />

    <TextView
        android:id="@+id/sol2progressss_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="20"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sol1progressss_bar"
        app:layout_constraintEnd_toEndOf="@+id/sol1progressss_bar"
        app:layout_constraintStart_toStartOf="@+id/sol1progressss_bar"
        app:layout_constraintTop_toTopOf="@+id/sol1progressss_bar" />

    <TextView
        android:id="@+id/sol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sol 2"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/sol1progressss_bar"
        app:layout_constraintStart_toStartOf="@+id/sol1progressss_bar"
        app:layout_constraintTop_toBottomOf="@+id/sol1progressss_bar" />
    <ProgressBar
        android:id="@+id/Progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/sol2progressss_bar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:indeterminateOnly="false"
        android:progress="20"
        android:progressDrawable="@drawable/custom_progress_red"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/Waterprogress_bar"
        app:layout_constraintStart_toStartOf="@+id/Waterprogress_bar"
        app:layout_constraintTop_toBottomOf="@+id/niveaudeau" />

    <TextView
        android:id="@+id/sol1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sol 2"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/sol2progressss_bar"
        app:layout_constraintStart_toStartOf="@+id/sol2progressss_bar"
        app:layout_constraintTop_toBottomOf="@+id/sol2progressss_bar" />

    <TextView
        android:id="@+id/sol1progressss_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="20"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sol2progressss_bar"
        app:layout_constraintEnd_toEndOf="@+id/sol2progressss_bar"
        app:layout_constraintStart_toStartOf="@+id/sol2progressss_bar"
        app:layout_constraintTop_toTopOf="@+id/sol2progressss_bar" />

    <ProgressBar
        android:id="@+id/temprogressss_bar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:indeterminateOnly="false"
        android:progress="20"
        android:layout_marginTop="15dp"
        android:progressDrawable="@drawable/custom_progress_red"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/sol2"
        app:layout_constraintStart_toStartOf="@+id/sol1"
        app:layout_constraintTop_toBottomOf="@+id/sol1" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sol 2"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/temprogressss_bar"
        app:layout_constraintStart_toStartOf="@+id/temprogressss_bar"
        app:layout_constraintTop_toBottomOf="@+id/temprogressss_bar" />

    <TextView
        android:id="@+id/temprogressss_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="20"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/temprogressss_bar"
        app:layout_constraintEnd_toEndOf="@+id/temprogressss_bar"
        app:layout_constraintStart_toStartOf="@+id/temprogressss_bar"
        app:layout_constraintTop_toTopOf="@+id/temprogressss_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>
