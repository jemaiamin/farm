<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/signin"
    tools:context=".sign_in">

    <LinearLayout
       android:id="@+id/linearLayout4"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#00000000"
        android:src="@drawable/ic_action_name"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4"
        android:contentDescription="TODO" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:autofillHints="name"
        android:backgroundTint="#00000000"
        android:hint="First_name"
        android:inputType="text"
        android:textColorHint="@color/black"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/Last_name"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:autofillHints="last_name"
        android:backgroundTint="#00000000"
        android:hint="Last_Name"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_name" />


    <EditText
        android:id="@+id/Email"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:autofillHints="Email"
        android:backgroundTint="#00000000"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/Last_name" />

    <EditText
        android:id="@+id/Password_sign_in"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:autofillHints="password"
        android:backgroundTint="#00000000"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/black"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/Email" />


    <EditText


        android:id="@+id/Phone"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:backgroundTint="#00000000"
        android:inputType="phone"
        android:hint="Phone"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password_sign_in"
        android:autofillHints="phone" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:src="@drawable/ic_action_name"
        app:layout_constraintBottom_toBottomOf="@+id/first_name"
        app:layout_constraintEnd_toStartOf="@+id/first_name"
        app:layout_constraintTop_toTopOf="@+id/first_name" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"

        android:src="@drawable/ic_action_call"
        app:layout_constraintBottom_toBottomOf="@+id/Phone"
        app:layout_constraintEnd_toStartOf="@+id/Phone"
        app:layout_constraintTop_toBottomOf="@+id/Password_sign_in" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:src="@drawable/ic_action_lock"
        app:layout_constraintBottom_toBottomOf="@+id/Password_sign_in"
        app:layout_constraintEnd_toStartOf="@+id/Password_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:src="@drawable/ic_action_email"
        app:layout_constraintBottom_toBottomOf="@+id/Email"
        app:layout_constraintEnd_toStartOf="@+id/Email"
        app:layout_constraintTop_toBottomOf="@+id/Last_name" />



    <Button
        android:id="@+id/Sign_in_button"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Sign_in"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Phone" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:src="@drawable/ic_action_name"
        app:layout_constraintBottom_toBottomOf="@+id/Last_name"
        app:layout_constraintEnd_toStartOf="@+id/Last_name"
        app:layout_constraintTop_toTopOf="@+id/Last_name" />

    <ProgressBar
        android:id="@+id/Progress"
        tools:ignore="MissingConstraints"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4" />


</androidx.constraintlayout.widget.ConstraintLayout>